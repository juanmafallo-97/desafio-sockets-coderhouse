<h1>Nuevo Producto</h1>
<div class="container">
  <form id="product-form">
    <div class="form-group">
      <label for="product-title">Nombre del producto</label>
      <input
        type="text"
        class="form-control"
        id="product-title"
        placeholder="Producto..."
        required
      />
    </div>
    <div class="form-group">
      <label for="product-price">Precio del producto</label>
      <input
        type="text"
        class="form-control"
        id="product-price"
        placeholder="Precio..."
        required
      />
    </div>
    <div class="form-group">
      <label for="product-image">URL de la imagen</label>
      <input
        type="text"
        class="form-control"
        id="product-image"
        placeholder="URL..."
        required
      />
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
  </form>
</div>